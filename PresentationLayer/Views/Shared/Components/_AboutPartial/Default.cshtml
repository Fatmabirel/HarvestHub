@using EntityLayer.Concrete
@model List<About>

<div class="about" id="about">
    <div class="container">
        <h3 class="tittle">Hakkımızda</h3>
        <p class="heading-btm-w3ls">Dünya standartlarında tarım çözümleri sunarak, çiftçilere sürdürülebilir ve verimli üretim imkânları sağlıyoruz.</p>
        <div id="horizontalTab">
            <ul class="resp-tabs-list">
                <li>Tarihçe</li>
                <li>Biz Kimiz</li>
                <li>Müşteriler</li>
            </ul>
            @foreach (var item in Model)
            {
                <div class="resp-tabs-container">
                    <div class="tab1">
                        <p class="para-w3-agileits">@item.History</p>
                    </div>
                    <div class="tab2">
                        <p class="para-w3-agileits">@item.AboutUs</p>
                    </div>
                    <div class="tab3">
                        <div class="clients">
                            <ul>
                                <li><img src="~/user-template/images/c1.png" alt="clients" class="img-responsive" /><span>Selim Demir</span></li>
                                <li><img src="~/user-template/images/c2.png" alt="clients" class="img-responsive" /><span>Fatma Yılmaz</span></li>
                                <li><img src="~/user-template/images/c3.png" alt="clients" class="img-responsive" /><span>Ali Yaman</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>