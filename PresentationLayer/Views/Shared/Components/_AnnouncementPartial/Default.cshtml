@using EntityLayer.Concrete
@model List<Announcement>

<div class="blog" id="blog">
    <div class="container">
        <h3 class="tittle">Güncel Haberler</h3>
        <p class="heading-btm-w3ls">Tarım sektöründeki son gelişmeleri ve yenilikleri burada bulabilirsiniz.</p>
        @foreach (var item in Model)
        {
            <div class="blog-grid-w3-agileits">
                <div class=" col-md-7 blog-img1-agileits-w3layouts">
                    <a href="#" data-toggle="modal"></a>
                </div>
                <div class=" col-md-5 blog-info-w3layouts">
                    <h6> <a href="#" data-toggle="modal">@item.Title</a></h6>
                    <div class="inner-info">
                        <a href="#" class="blog-text-w3ls bar">@item.Date</a>
                        <p class="para-w3-agileits">@item.Description</p>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        }
    </div>
</div>
