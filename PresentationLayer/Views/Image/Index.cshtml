@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1"><img src="/@item.ImageUrl" alt="image" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="/Image/DeleteImage/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Image/EditImage/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>

                                <td>Hiç görsel yok</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Image/AddImage" class="btn btn-outline-info">Yeni Görsel Girişi</a>
            </div>
        </div>
    </div>
</div>
